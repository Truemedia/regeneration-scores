<!-- Highscores -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 id="highscores-system-name">{{_ 'Highscores' }}</h4>
		</div>
		<div class="modal-body">
			<p>
				My highest round: <span data-bind="text: rounds"></span>
				<br />
				My highest points: <span data-bind="text: points"></span>
				<br />
				Kill/Death ratio: <span data-bind="text: kd_ratio"></span>
			</p>
			<div class="menu">
				<div class="accordion">
					<div class="accordion-group">
						<div class="accordion-heading game-mode">
							<img src="http://placehold.it/100x30" alt="endless survival icon" style="float:left; margin: 3px 10px 0 3px; text-align:center;"/>
							<a class="accordion-toggle" data-toggle="collapse" href="#game-mode_1">{{_ 'Endless survival' }}</a>
						</div>
						<div id="game-mode_1" class="accordion-body collapse">
							<div class="accordion-inner">
								<table class="table table-striped table-condensed">
									<thead style="color: orange;">
										<tr>
											<th>{{_ 'Name' }}</th><!-- (Username + Full name) -->
											<th>{{_ 'Playing as' }}</th><!-- (Character name) -->
											<th>{{_ 'Rounds' }}</th><!-- (Number) -->
											<th>{{_ 'Kills' }}</th><!-- (Number) -->
											<th>{{_ 'Assists' }}</th><!-- (Number) -->
											<th>{{_ 'Downs' }}</th><!-- (Number) -->
											<th>{{_ 'Revives' }}</th><!-- (Number) -->
											<th>{{_ 'Played for' }}</th><!-- (Hours, Minutes, Seconds) -->
											<th>{{_ 'Death by' }}</td><!-- (Death cause) -->
										</tr>
									</thead>
									<tbody style="color: grey;">
										{{#items}}
										<tr>
											<td>{{username_and_fullname}}</td>
											<td>{{playing_as}}</td>
											<td>{{rounds}}</td>
											<td>{{kills}}</td>
											<td>{{assists}}</td>
											<td>{{downs}}</td>
											<td>{{revives}}</td>
											<td>{{played_for}}</td>
											<td>{{death_by}}</td>
										</tr>
										{{/items}}
									</tbody>
								</table>
							</div>
						</div>
						<div class="accordion-heading game-mode">
							<img src="http://placehold.it/100x30" alt="store mode icon" style="float:left; margin: 3px 10px 0 3px; text-align:center;"/>
							<a class="accordion-toggle" data-toggle="collapse" href="#game-mode_2">{{_ 'Story mode' }}</a>
						</div>
						<div id="game-mode_2" class="accordion-body collapse">
							<div class="accordion-inner">
								<table class="table table-striped table-condensed">
									<thead style="color: orange;">
										<tr>
											<th>{{_ 'Name' }}</th><!-- (Username + Full name) -->
											<th>{{_ 'Difficulty' }}</td><!-- (Beginner, Intermediate, Regular, Realistic) -->
											<th>{{_ 'Chapters' }}</th><!-- (Number) -->
											<th>{{_ 'Kills' }}</th><!-- (Number) -->
											<th>{{_ 'Assists' }}</th><!-- (Number) -->
											<th>{{_ 'Downs' }}</th><!-- (Number) -->
											<th>{{_ 'Revives' }}</th><!-- (Number) -->
											<th>{{_ 'Played for' }}</th><!-- (Hours, Minutes, Seconds) -->
										</tr>
									</thead>
								<tbody style="color: grey;">
									<tr>
										<td>Truemedia (Wade Penistone)</td>
										<td>Realistic</td>
										<td>7</td>
										<td>1097</td>
										<td>543</td>
										<td>13</td>
										<td>48</td>
										<td>3 hours 16 minutes 3 seconds</td>
									</tr>
									<tr>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<div class="accordion-heading game-mode">
						<img src="http://placehold.it/100x30" alt="survival game icon" style="float:left; margin: 3px 10px 0 3px; text-align:center;"/>
						<a class="accordion-toggle" data-toggle="collapse" href="#game-mode_3">{{_ 'Survival game' }}</a>
					</div>
					<div id="game-mode_3" class="accordion-body collapse">
						<div class="accordion-inner">
							<table class="table table-striped table-condensed">
								<thead style="color: orange;">
									<tr>
										<th>{{_ 'Name' }}</th><!-- (Username + Full name) -->
										<th>{{_ 'Playing as' }}</th><!-- (Character name) -->
										<th>{{_ 'Human Kills' }}</th><!-- (Number) -->
										<th>{{_ 'Alien Kills' }}</th><!-- (Number) -->
										<th>{{_ 'Played for' }}</th><!-- (Hours, Minutes, Seconds) -->
										<th>{{_ 'Cause of death' }}</td><!-- (Death cause + killers name) -->
									</tr>
								</thead>
								<tbody style="color: grey;">
									<tr>
										<td>Truemedia (Wade Penistone)</td>
										<td>Reece Neadham</td>
										<td>4</td>
										<td>89</td>
										<td>34 minutes 8 seconds</td>
										<td>Shot by Username (Full name)</td>
									</tr>
									<tr>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
										<td>-</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{_ 'Close' }}</button>
		</div>
	</div>
</div>